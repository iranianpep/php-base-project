{
  "name": "php-base-project/php-base-project",
  "description": "A packagist ready package to start a new PHP 7 project including Composer, PHPUnit, Travis, CodeClimate and StyleCI.",
  "homepage": "https://github.com/iranianpep/php-base-project",
  "license": "MIT",
  "authors": [
    { "name": "Ehsan Abbasi", "email": "ehsan.abb@gmail.com" }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "sebastian/phpcpd": "^6.0",
    "phpmd/phpmd": "^2.10",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "PhpBaseProject\\": "src/PhpBaseProject"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpBaseProject\\": "tests/PhpBaseProject"
    }
  }
}
